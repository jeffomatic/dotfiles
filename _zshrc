### OS-SPECIFIC CONFIG (mostly GNU vs BSD)

osType=$(echo $OSTYPE | sed -E 's/^darwin[0-9.]+/darwin/')
sysConfig=$HOME/.zshrc.$osType
if [ -f "$sysConfig" ]; then
  . "$sysConfig"
fi

### LOCAL CONFIG

localConfig=$HOME/.localrc
if [ -f "$localConfig" ]; then
  . "$localConfig"
fi
